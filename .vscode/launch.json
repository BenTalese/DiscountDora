{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387

    // program was "${file}" but changed so it will always start debugging from main.py
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DAPI",
            "type": "python",
            "request": "launch",
            "program": "framework/dora_api/startup.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "MAPI",
            "type": "python",
            "request": "launch",
            "program": "framework/merchant_api/startup.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Emailer",
            "type": "python",
            "request": "launch",
            "program": "framework/emailer/startup.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Web App",
            "preLaunchTask": "quasar:dev",
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Web App (Old)",
            "url": "http://localhost:5174",
            "preLaunchTask": "npm: dev",
            "webRoot": "${workspaceFolder}/framework/web_app_old/app",
            "pathMappings": [
                {
                    "url": "http://localhost:5174/app",
                    "path": "${workspaceFolder}/framework/web_app_old/app"
                }
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH1": "${env:PYTHONPATH}:${workspaceFolder}",
                "PYTHONPATH2": "${workspaceFolder}:${env:PYTHONPATH}"
            }
        }
    ],
    "compounds": [
        {
            "name": "Run All",
            "configurations": ["DAPI", "MAPI", "Web App", "Emailer"]
        },
        {
            "name": "Run Web App + DAPI",
            "configurations": ["DAPI", "Web App"]
        },
        {
            "name": "Run Web App + MAPI",
            "configurations": ["MAPI", "Web App"]
        },
        {
            "name": "Run Web App + DAPI + MAPI",
            "configurations": ["DAPI", "MAPI", "Web App"]
        }
    ]
}
