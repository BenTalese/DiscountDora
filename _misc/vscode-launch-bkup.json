{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API",
            "type": "python",
            "request": "launch",
            "program": "framework/api/startup.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Emailer",
            "type": "python",
            "request": "launch",
            "program": "framework/emailer/startup.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Web App",
            "url": "http://localhost:5174",
            "preLaunchTask": "Sleepdelay",
            "webRoot": "${workspaceFolder}/framework/web_app/app",
            "pathMappings": [
                {
                    "url": "http://localhost:5174/app",
                    "path": "${workspaceFolder}/framework/web_app/app"
                }
            ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH1": "${env:PYTHONPATH}:${workspaceFolder}",
                "PYTHONPATH2": "${workspaceFolder}:${env:PYTHONPATH}"
            }
        }
    ],
    "compounds": [
        {
            "name": "Run All",
            "configurations": ["API", "Web App", "Emailer"]
        },
        {
            "name": "Run Web App + API",
            "configurations": ["API", "Web App"]
        }
    ]
}
